<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:FrapaClonia.UI.Controls"
             xmlns:services="clr-namespace:FrapaClonia.UI.Services"
             x:Class="FrapaClonia.UI.Controls.ToastContainer"
             x:DataType="services:ToastService"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             IsHitTestVisible="False">

  <UserControl.Styles>
    <StyleInclude Source="avares://FrapaClonia.UI/Styles/SharedStyles.axaml" />
  </UserControl.Styles>

  <!-- Toast Container positioned in top-right corner -->
  <Grid HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
    <ItemsControl ItemsSource="{Binding Toasts}"
                  x:Name="ToastList"
                  Margin="{StaticResource ThicknessL}"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  IsHitTestVisible="True">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <StackPanel Orientation="Vertical"
                      Spacing="{StaticResource SpacingS}" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>

      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <controls:ToastNotification x:Name="ToastControl" />
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </Grid>
</UserControl>
