<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:FrapaClonia.UI.ViewModels;assembly=FrapaClonia.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="FrapaClonia.UI.Views.DashboardView"
             x:DataType="vm:DashboardViewModel">

    <Design.DataContext>
        <vm:DashboardViewModel />
    </Design.DataContext>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <Panel Margin="{StaticResource ContentPadding}">
            <StackPanel Spacing="{StaticResource SpacingL}">

                <!-- Page Header -->
                <Grid ColumnDefinitions="Auto,*">
                    <TextBlock Grid.Column="0"
                               Text="Dashboard"
                               Classes="page-title" />

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="{StaticResource SpacingS}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Border Width="8" Height="8"
                                CornerRadius="{StaticResource CornerRadiusFull}"
                                Background="{DynamicResource AppSuccessBrush}">
                            <Border.Styles>
                                <Style Selector="Border">
                                    <Style.Animations>
                                        <Animation Duration="0:0:1.5" IterationCount="Infinite">
                                            <KeyFrame Cue="0%">
                                                <Setter Property="Opacity" Value="1.0" />
                                            </KeyFrame>
                                            <KeyFrame Cue="50%">
                                                <Setter Property="Opacity" Value="0.4" />
                                            </KeyFrame>
                                            <KeyFrame Cue="100%">
                                                <Setter Property="Opacity" Value="1.0" />
                                            </KeyFrame>
                                        </Animation>
                                    </Style.Animations>
                                </Style>
                            </Border.Styles>
                        </Border>
                        <TextBlock Text="{Binding StatusMessage}"
                                   FontSize="{StaticResource FontSizeM}"
                                   FontWeight="{StaticResource FontWeightMedium}"
                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                    </StackPanel>
                </Grid>

                <!-- Primary Action Bar -->
                <Border Classes="card">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    Spacing="{StaticResource SpacingM}"
                                    VerticalAlignment="Center">
                            <Button Content="Start Frpc"
                                    Command="{Binding StartFrpcCommand}"
                                    Classes="primary" />

                            <Button Content="Stop"
                                    Command="{Binding StopFrpcCommand}"
                                    Classes="secondary">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Foreground" Value="{DynamicResource AppErrorBrush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource AppErrorBrush}" />
                                    </Style>
                                </Button.Styles>
                            </Button>

                            <Button Content="Restart"
                                    Command="{Binding RestartFrpcCommand}"
                                    Classes="secondary">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Foreground" Value="{DynamicResource AppAccentColor2Brush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource AppAccentColor2Brush}" />
                                    </Style>
                                </Button.Styles>
                            </Button>
                        </StackPanel>

                        <!-- Status Panel -->
                        <Border Grid.Column="2"
                                Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                                CornerRadius="{StaticResource CornerRadiusS}"
                                Padding="{StaticResource ThicknessS}"
                                HorizontalAlignment="Right">
                            <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Process ID:"
                                           Classes="label" />
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="{Binding FrpcProcessId, TargetNullValue='N/A'}"
                                           Classes="value"
                                           Margin="{StaticResource ThicknessLeftS}" />

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Server:"
                                           Classes="label"
                                           Margin="{StaticResource ThicknessTopS}" />
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding ServerAddress}"
                                           Classes="value"
                                           Margin="{StaticResource ThicknessLeftS}" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Section Header -->
                <TextBlock Text="Quick Access"
                           Classes="section-title"
                           Margin="{StaticResource ThicknessTopS}" />

                <!-- Quick Access Cards -->
                <Grid ColumnDefinitions="*,*,*,*"
                      ColumnSpacing="{StaticResource CardGridSpacing}">
                    <!-- Server Configuration Card -->
                    <Border Grid.Column="0" Classes="card">
                        <Grid RowDefinitions="Auto,*,Auto" Height="120">
                            <TextBlock Grid.Row="0"
                                       Text="Server"
                                       Classes="card-title" />
                            <TextBlock Grid.Row="1"
                                       Text="Configure frpc server connection"
                                       Classes="card-description"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center" />
                            <Button Grid.Row="2"
                                    Content="Configure"
                                    Command="{Binding NavigateToServerConfigCommand}"
                                    HorizontalAlignment="Left"
                                    Classes="secondary" />
                        </Grid>
                    </Border>

                    <!-- Proxy Management Card -->
                    <Border Grid.Column="1" Classes="card">
                        <Grid RowDefinitions="Auto,*,Auto" Height="120">
                            <TextBlock Grid.Row="0"
                                       Text="Proxies"
                                       Classes="card-title" />
                            <TextBlock Grid.Row="1"
                                       Text="Manage proxy configurations"
                                       Classes="card-description"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center" />
                            <Button Grid.Row="2"
                                    Content="Manage"
                                    Command="{Binding NavigateToProxyListCommand}"
                                    HorizontalAlignment="Left"
                                    Classes="secondary" />
                        </Grid>
                    </Border>

                    <!-- Deployment Card -->
                    <Border Grid.Column="2" Classes="card">
                        <Grid RowDefinitions="Auto,*,Auto" Height="120">
                            <TextBlock Grid.Row="0"
                                       Text="Deploy"
                                       Classes="card-title" />
                            <TextBlock Grid.Row="1"
                                       Text="Download and configure frpc"
                                       Classes="card-description"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center" />
                            <Button Grid.Row="2"
                                    Content="Setup"
                                    Command="{Binding NavigateToDeploymentCommand}"
                                    HorizontalAlignment="Left"
                                    Classes="secondary" />
                        </Grid>
                    </Border>

                    <!-- Logs Card -->
                    <Border Grid.Column="3" Classes="card">
                        <Grid RowDefinitions="Auto,*,Auto" Height="120">
                            <TextBlock Grid.Row="0"
                                       Text="Logs"
                                       Classes="card-title" />
                            <TextBlock Grid.Row="1"
                                       Text="View real-time logs"
                                       Classes="card-description"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center" />
                            <Button Grid.Row="2"
                                    Content="View"
                                    Command="{Binding NavigateToLogsCommand}"
                                    HorizontalAlignment="Left"
                                    Classes="secondary" />
                        </Grid>
                    </Border>
                </Grid>

                <!-- Section Header -->
                <TextBlock Text="Overview"
                           Classes="section-title"
                           Margin="{StaticResource ThicknessTopS}" />

                <!-- Overview Stats -->
                <Grid ColumnDefinitions="*,*,*"
                      ColumnSpacing="{StaticResource CardGridSpacing}">
                    <!-- Proxy Count -->
                    <Border Grid.Column="0" Classes="card">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="{StaticResource CornerRadiusS}"
                                    Background="{DynamicResource AppAccentColor}"
                                    Margin="{StaticResource ThicknessRightM}">
                                <TextBlock Text="P"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource SystemControlForegroundAltMediumHighBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProxyCount, StringFormat={}{0}}"
                                           FontSize="24"
                                           FontWeight="{StaticResource FontWeightSemiBold}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                <TextBlock Text="Active Proxies"
                                           FontSize="{StaticResource FontSizeM}"
                                           FontWeight="{StaticResource FontWeightMedium}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="{StaticResource ThicknessTopXS}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Configuration Status -->
                    <Border Grid.Column="1" Classes="card">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="{StaticResource CornerRadiusS}"
                                    Background="{DynamicResource AppAccentColor}"
                                    Margin="{StaticResource ThicknessRightM}">
                                <TextBlock Text="C"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource SystemControlForegroundAltMediumHighBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Configured"
                                           FontSize="{StaticResource FontSizeL}"
                                           FontWeight="{StaticResource FontWeightSemiBold}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                <TextBlock Text="Configuration"
                                           FontSize="{StaticResource FontSizeM}"
                                           FontWeight="{StaticResource FontWeightMedium}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="{StaticResource ThicknessTopXS}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Recent Activity -->
                    <Border Grid.Column="2" Classes="card">
                        <Grid RowDefinitions="Auto,*">
                            <TextBlock Grid.Row="0"
                                       Text="Recent Activity"
                                       Classes="card-title" />
                            <Border Grid.Row="1"
                                    Background="{DynamicResource SystemControlPageBackgroundTransparent}"
                                    CornerRadius="{StaticResource CornerRadiusS}"
                                    Padding="{StaticResource ThicknessS}"
                                    VerticalAlignment="Center"
                                    MinHeight="48"
                                    Margin="{StaticResource ThicknessTopS}">
                                <TextBlock Text="{Binding LastLogLine}"
                                           FontFamily="{DynamicResource MonoFontFamily}"
                                           FontSize="{StaticResource FontSizeS}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

            </StackPanel>
        </Panel>
    </ScrollViewer>
</UserControl>
