<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:FrapaClonia.UI.ViewModels;assembly=FrapaClonia.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="FrapaClonia.UI.Views.DashboardView"
             x:DataType="vm:DashboardViewModel">

    <Design.DataContext>
        <vm:DashboardViewModel />
    </Design.DataContext>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <Border Margin="24">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">
                <!-- Page Header -->
                <Grid Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,24">
                    <TextBlock Grid.Column="0"
                               Text="Dashboard"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="8"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Border Width="8" Height="8"
                                CornerRadius="9999"
                                Background="{DynamicResource AppSuccessBrush}">
                            <Border.Styles>
                                <Style Selector="Border">
                                    <Style.Animations>
                                        <Animation Duration="0:0:1.5" IterationCount="Infinite">
                                            <KeyFrame Cue="0%">
                                                <Setter Property="Opacity" Value="1.0" />
                                            </KeyFrame>
                                            <KeyFrame Cue="50%">
                                                <Setter Property="Opacity" Value="0.4" />
                                            </KeyFrame>
                                            <KeyFrame Cue="100%">
                                                <Setter Property="Opacity" Value="1.0" />
                                            </KeyFrame>
                                        </Animation>
                                    </Style.Animations>
                                </Style>
                            </Border.Styles>
                        </Border>
                        <TextBlock Text="{Binding StatusMessage}"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                    </StackPanel>
                </Grid>

                <!-- Primary Action Bar -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SystemControlPageBackgroundAltMediumBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    Spacing="12"
                                    VerticalAlignment="Center">
                            <Button Content="Start Frpc"
                                    Command="{Binding StartFrpcCommand}"
                                    Background="{DynamicResource SystemAccentColor}"
                                    Foreground="{DynamicResource SystemControlForegroundAltMediumHighBrush}"
                                    FontWeight="SemiBold"
                                    Height="40"
                                    Padding="20,10"
                                    CornerRadius="6" />

                            <Button Content="Stop"
                                    Command="{Binding StopFrpcCommand}"
                                    Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                    BorderThickness="1"
                                    Height="36"
                                    Padding="16,8"
                                    CornerRadius="6">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#DC2626" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="BorderBrush" Value="#DC2626" />
                                    </Style>
                                </Button.Styles>
                            </Button>

                            <Button Content="Restart"
                                    Command="{Binding RestartFrpcCommand}"
                                    Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                    BorderThickness="1"
                                    Height="36"
                                    Padding="16,8"
                                    CornerRadius="6">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="{DynamicResource SystemAccentColor2Brush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor2Brush}" />
                                    </Style>
                                </Button.Styles>
                            </Button>
                        </StackPanel>

                        <!-- Status Panel -->
                        <Border Grid.Column="2"
                                Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                                CornerRadius="6"
                                Padding="12,8"
                                HorizontalAlignment="Right">
                            <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Process ID:"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="{Binding FrpcProcessId, TargetNullValue='N/A'}"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                           Margin="8,0,0,0" />

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Server:"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="0,4,0,0" />
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding ServerAddress}"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                           Margin="8,4,0,0" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Section Header -->
                <TextBlock Grid.Row="2"
                           Text="Quick Access"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                           Margin="0,24,0,0" />

                <!-- Quick Access Cards -->
                <Grid Grid.Row="3"
                      ColumnDefinitions="*,*,*,*"
                      ColumnSpacing="12"
                      Margin="0,12,0,0">
                    <!-- Server Configuration Card -->
                    <Border Grid.Column="0"
                            Background="{DynamicResource SystemControlPageBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <Grid RowDefinitions="Auto,*,Auto" Height="120">
                            <TextBlock Grid.Row="0"
                                       Text="Server"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                            <TextBlock Grid.Row="1"
                                       Text="Configure frpc server connection"
                                       FontSize="13"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center" />
                            <Button Grid.Row="2"
                                    Content="Configure"
                                    Command="{Binding NavigateToServerConfigCommand}"
                                    HorizontalAlignment="Left"
                                    Height="36"
                                    MinWidth="100"
                                    Padding="16,8"
                                    CornerRadius="4" />
                        </Grid>
                    </Border>

                    <!-- Proxy Management Card -->
                    <Border Grid.Column="1"
                            Background="{DynamicResource SystemControlPageBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <Grid RowDefinitions="Auto,*,Auto" Height="120">
                            <TextBlock Grid.Row="0"
                                       Text="Proxies"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                            <TextBlock Grid.Row="1"
                                       Text="Manage proxy configurations"
                                       FontSize="13"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center" />
                            <Button Grid.Row="2"
                                    Content="Manage"
                                    Command="{Binding NavigateToProxyListCommand}"
                                    HorizontalAlignment="Left"
                                    Height="36"
                                    MinWidth="100"
                                    Padding="16,8"
                                    CornerRadius="4" />
                        </Grid>
                    </Border>

                    <!-- Deployment Card -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource SystemControlPageBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <Grid RowDefinitions="Auto,*,Auto" Height="120">
                            <TextBlock Grid.Row="0"
                                       Text="Deploy"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                            <TextBlock Grid.Row="1"
                                       Text="Download and configure frpc"
                                       FontSize="13"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center" />
                            <Button Grid.Row="2"
                                    Content="Setup"
                                    Command="{Binding NavigateToDeploymentCommand}"
                                    HorizontalAlignment="Left"
                                    Height="36"
                                    MinWidth="100"
                                    Padding="16,8"
                                    CornerRadius="4" />
                        </Grid>
                    </Border>

                    <!-- Logs Card -->
                    <Border Grid.Column="3"
                            Background="{DynamicResource SystemControlPageBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <Grid RowDefinitions="Auto,*,Auto" Height="120">
                            <TextBlock Grid.Row="0"
                                       Text="Logs"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                            <TextBlock Grid.Row="1"
                                       Text="View real-time logs"
                                       FontSize="13"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center" />
                            <Button Grid.Row="2"
                                    Content="View"
                                    Command="{Binding NavigateToLogsCommand}"
                                    HorizontalAlignment="Left"
                                    Height="36"
                                    MinWidth="100"
                                    Padding="16,8"
                                    CornerRadius="4" />
                        </Grid>
                    </Border>
                </Grid>

                <!-- Section Header -->
                <TextBlock Grid.Row="4"
                           Text="Overview"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                           Margin="0,24,0,0" />

                <!-- Overview Stats -->
                <Grid Grid.Row="5"
                      ColumnDefinitions="*,*,*"
                      ColumnSpacing="12"
                      Margin="0,12,0,0">
                    <!-- Proxy Count -->
                    <Border Grid.Column="0"
                            Background="{DynamicResource SystemControlPageBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="6"
                                    Background="{DynamicResource SystemAccentColor}"
                                    Margin="0,0,12,0">
                                <TextBlock Text="P"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource SystemControlForegroundAltMediumHighBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProxyCount, StringFormat={}{0}}"
                                           FontSize="24"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                <TextBlock Text="Active Proxies"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="0,2,0,0" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Configuration Status -->
                    <Border Grid.Column="1"
                            Background="{DynamicResource SystemControlPageBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <Grid ColumnDefinitions="Auto,*">
                            <Border Grid.Column="0"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="6"
                                    Background="{DynamicResource SystemAccentColor}"
                                    Margin="0,0,12,0">
                                <TextBlock Text="C"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource SystemControlForegroundAltMediumHighBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Configured"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                                <TextBlock Text="Configuration"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="0,2,0,0" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Recent Activity -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource SystemControlPageBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <Grid RowDefinitions="Auto,*">
                            <TextBlock Grid.Row="0"
                                       Text="Recent Activity"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                            <Border Grid.Row="1"
                                    Background="{DynamicResource SystemControlPageBackgroundTransparent}"
                                    CornerRadius="4"
                                    Padding="8"
                                    VerticalAlignment="Center"
                                    MinHeight="48"
                                    Margin="0,8,0,0">
                                <TextBlock Text="{Binding LastLogLine}"
                                           FontFamily="Consolas,Monospace"
                                           FontSize="11"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>
