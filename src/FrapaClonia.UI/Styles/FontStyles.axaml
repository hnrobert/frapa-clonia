<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- =============================================
       GLOBAL FONT SETTINGS
       CJK-friendly font stack for proper character rendering
       ============================================= -->

  <Style Selector="Window">
    <Setter Property="FontFamily"
            Value="PingFang SC,Hiragino Sans GB,Microsoft YaHei UI,Meiryo UI,Malgun Gothic,Gulim,Dotum,Segoe UI,Apple System,WenQuanYi Micro Hei,Noto Sans CJK SC,Noto Sans KR,sans-serif" />
  </Style>

  <Style Selector="TextBlock">
    <Setter Property="FontFamily"
            Value="PingFang SC,Hiragino Sans GB,Microsoft YaHei UI,Meiryo UI,Malgun Gothic,Gulim,Dotum,Segoe UI,Apple System,WenQuanYi Micro Hei,Noto Sans CJK SC,Noto Sans KR,sans-serif" />
  </Style>

  <Style Selector="Button">
    <Setter Property="FontFamily"
            Value="PingFang SC,Hiragino Sans GB,Microsoft YaHei UI,Meiryo UI,Malgun Gothic,Gulim,Dotum,Segoe UI,Apple System,WenQuanYi Micro Hei,Noto Sans CJK SC,Noto Sans KR,sans-serif" />
  </Style>

  <Style Selector="TextBox">
    <Setter Property="FontFamily"
            Value="PingFang SC,Hiragino Sans GB,Microsoft YaHei UI,Meiryo UI,Malgun Gothic,Gulim,Dotum,Segoe UI,Apple System,WenQuanYi Micro Hei,Noto Sans CJK SC,Noto Sans KR,sans-serif" />
  </Style>

  <Style Selector="ComboBox">
    <Setter Property="FontFamily"
            Value="PingFang SC,Hiragino Sans GB,Microsoft YaHei UI,Meiryo UI,Malgun Gothic,Gulim,Dotum,Segoe UI,Apple System,WenQuanYi Micro Hei,Noto Sans CJK SC,Noto Sans KR,sans-serif" />
  </Style>

</Styles>
