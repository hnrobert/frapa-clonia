<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Card Styles -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundAltMediumBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusL}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessCard}" />
    </Style>

    <Style Selector="Border.card:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource AppPrimaryBrush}" />
    </Style>

    <!-- Section Card -->
    <Style Selector="Border.section-card">
        <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundAltLowBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusM}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessCard}" />
        <Setter Property="Margin" Value="{StaticResource ThicknessBottomM}" />
    </Style>

    <!-- Settings Card -->
    <Style Selector="Border.settings-card">
        <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundAltMediumBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusL}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessL}" />
        <Setter Property="Margin" Value="{StaticResource ThicknessBottomL}" />
    </Style>

    <!-- Text Styles -->
    <Style Selector="TextBlock.page-title">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXXXL}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
    </Style>

    <Style Selector="TextBlock.page-subtitle">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
    </Style>

    <Style Selector="TextBlock.heading">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
        <Setter Property="Margin" Value="{StaticResource ThicknessBottomS}" />
    </Style>

    <Style Selector="TextBlock.section-title">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
    </Style>

    <Style Selector="TextBlock.section-header">
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
    </Style>

    <Style Selector="TextBlock.field-label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.value">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.hint">
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="TextBlock.card-title">
        <Setter Property="FontSize" Value="{StaticResource FontSizeL}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
    </Style>

    <Style Selector="TextBlock.card-description">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Button Styles -->
    <Style Selector="Button">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{DynamicResource AppPrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusM}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessHorizontalM}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
        <Setter Property="MinHeight" Value="{StaticResource ButtonHeightL}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppPrimaryHoverBrush}" />
    </Style>

    <Style Selector="Button.primary:disabled /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SystemControlDisabledBaseMediumLowBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlDisabledBaseMediumBrush}" />
    </Style>

    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource AppPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppPrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusM}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessHorizontalM}" />
        <Setter Property="MinHeight" Value="{StaticResource ButtonHeightL}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppPrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.secondary:disabled /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlDisabledBaseMediumBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlDisabledBaseMediumBrush}" />
    </Style>

    <Style Selector="Button.destructive">
        <Setter Property="Foreground" Value="{DynamicResource AppErrorBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.destructive:pointerover">
        <Setter Property="Background" Value="{DynamicResource AppErrorBrush}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.action-button">
        <Setter Property="Height" Value="{StaticResource ButtonHeightL}" />
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="Padding" Value="{StaticResource ThicknessHorizontalM}" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusS}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <!-- Input Styles -->
    <Style Selector="TextBox.input-control, ComboBox.input-control, NumericUpDown.input-control">
        <Setter Property="MinHeight" Value="{StaticResource InputHeightM}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessHorizontalM}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Status Indicators -->
    <Style Selector="Border.status-indicator">
        <Setter Property="Width" Value="8" />
        <Setter Property="Height" Value="8" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusFull}" />
    </Style>

    <Style Selector="Border.status-indicator.running">
        <Setter Property="Background" Value="{DynamicResource AppSuccessBrush}" />
    </Style>

    <Style Selector="Border.status-indicator.stopped">
        <Setter Property="Background" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />
    </Style>

    <Style Selector="Border.status-indicator.error">
        <Setter Property="Background" Value="{DynamicResource AppErrorBrush}" />
    </Style>

    <!-- Status Text Colors -->
    <Style Selector="TextBlock.status-error">
        <Setter Property="Foreground" Value="{DynamicResource AppErrorBrush}" />
    </Style>

    <Style Selector="TextBlock.status-warning">
        <Setter Property="Foreground" Value="{DynamicResource AppWarningBrush}" />
    </Style>

    <Style Selector="TextBlock.status-success">
        <Setter Property="Foreground" Value="{DynamicResource AppSuccessBrush}" />
    </Style>

    <Style Selector="TextBlock.status-info">
        <Setter Property="Foreground" Value="{DynamicResource AppInfoBrush}" />
    </Style>

    <!-- Badge Styles -->
    <Style Selector="Border.type-badge">
        <Setter Property="Background" Value="{DynamicResource AppPrimaryBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusS}" />
        <Setter Property="Padding" Value="6,3" />
    </Style>

    <Style Selector="Border.type-badge TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    </Style>

    <!-- Navigation Styles -->
    <Style Selector="Button.nav-button">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="{StaticResource ThicknessL}" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlPageTextBaseHighBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusS}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBase}" />
        <Setter Property="MinHeight" Value="40" />
    </Style>

    <Style Selector="Button.nav-button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}" />
    </Style>

    <Style Selector="Button.nav-button:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListMediumBrush}" />
    </Style>

    <Style Selector="Button.nav-button:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlFocusVisualFocusBrush}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>

    <Style Selector="Button.nav-button:disabled">
        <Setter Property="Opacity" Value="0.5" />
    </Style>

    <Style Selector="Path.nav-icon">
        <Setter Property="Width" Value="{StaticResource IconSizeL}" />
        <Setter Property="Height" Value="{StaticResource IconSizeL}" />
        <Setter Property="Stretch" Value="Uniform" />
        <Setter Property="Fill" Value="{DynamicResource SystemControlPageTextBaseMediumBrush}" />
    </Style>

    <Style Selector="Button.nav-button:pointerover Path.nav-icon">
        <Setter Property="Fill" Value="{DynamicResource SystemControlHighlightAltBaseHighBrush}" />
    </Style>

    <!-- Separators -->
    <Style Selector="Separator.section">
        <Setter Property="Margin" Value="{StaticResource ThicknessVerticalM}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
    </Style>

    <!-- =============================================
         PAGE LAYOUT STYLES
         ============================================= -->

    <!-- Page Header -->
    <Style Selector="Border.page-header">
        <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundAltMediumBrush}" />
        <Setter Property="Padding" Value="{StaticResource ContentPadding}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>

    <!-- Page Toolbar -->
    <Style Selector="Border.page-toolbar">
        <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundTransparent}" />
        <Setter Property="Padding" Value="{StaticResource ContentPadding}" />
    </Style>

    <!-- Page Content -->
    <Style Selector="Border.page-content">
        <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundTransparent}" />
        <Setter Property="Padding" Value="{StaticResource ContentPadding}" />
    </Style>

    <!-- List Card -->
    <Style Selector="Border.list-card">
        <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundAltLowBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusM}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessCard}" />
        <Setter Property="Margin" Value="{StaticResource ThicknessBottomM}" />
    </Style>

    <Style Selector="Border.list-card:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
    </Style>

    <!-- Icon Button -->
    <Style Selector="Button.icon-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusS}" />
    </Style>

    <Style Selector="Button.icon-button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}" />
    </Style>

    <!-- Status Dot -->
    <Style Selector="Border.status-dot">
        <Setter Property="Width" Value="8" />
        <Setter Property="Height" Value="8" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusFull}" />
    </Style>

    <Style Selector="Border.status-dot.active">
        <Setter Property="Background" Value="{DynamicResource AppSuccessBrush}" />
    </Style>

    <Style Selector="Border.status-dot.inactive">
        <Setter Property="Background" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />
    </Style>

    <!-- Empty State -->
    <Style Selector="Border.empty-state">
        <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundAltLowBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusL}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessXL}" />
    </Style>

    <!-- Search Box -->
    <Style Selector="TextBox.search-box">
        <Setter Property="MinWidth" Value="240" />
        <Setter Property="Height" Value="{StaticResource ButtonHeightL}" />
    </Style>

    <!-- Filter ComboBox -->
    <Style Selector="ComboBox.filter-box">
        <Setter Property="MinWidth" Value="140" />
        <Setter Property="Height" Value="{StaticResource ButtonHeightL}" />
    </Style>

    <!-- =============================================
         ADDITIONAL STYLES
         ============================================= -->

    <!-- Button Variants -->
    <Style Selector="Button.primary-button">
        <Setter Property="Background" Value="{DynamicResource AppPrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusM}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessHorizontalM}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
        <Setter Property="MinHeight" Value="{StaticResource ButtonHeightL}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.secondary-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource AppPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AppPrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusM}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessHorizontalM}" />
        <Setter Property="MinHeight" Value="{StaticResource ButtonHeightL}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <!-- Readonly Value -->
    <Style Selector="TextBlock.readonly-value">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Form Field -->
    <Style Selector="Border.form-field">
        <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundAltLowBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusS}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessS}" />
        <Setter Property="Margin" Value="{StaticResource ThicknessBottomS}" />
    </Style>

    <Style Selector="Border.form-field.error-border">
        <Setter Property="BorderBrush" Value="{DynamicResource AppErrorBrush}" />
    </Style>

    <!-- Form Label -->
    <Style Selector="TextBlock.form-label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.form-label.required">
        <Setter Property="Foreground" Value="{DynamicResource AppErrorBrush}" />
    </Style>

    <!-- Form Hint -->
    <Style Selector="TextBlock.form-hint">
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Field Control -->
    <Style Selector="TextBox.field-control, ComboBox.field-control, NumericUpDown.field-control">
        <Setter Property="MinHeight" Value="{StaticResource InputHeightM}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessHorizontalM}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Settings Controls -->
    <Style Selector="CheckBox.settings-checkbox">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="ComboBox.settings-dropdown">
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="Height" Value="{StaticResource InputHeightM}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Section Border -->
    <Style Selector="Border.section-border">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Margin" Value="{StaticResource ThicknessVerticalM}" />
    </Style>

    <!-- =============================================
         LOG VIEWER STYLES
         ============================================= -->

    <!-- Log Viewer ListBox -->
    <Style Selector="ListBox.logViewer">
        <Setter Property="FontFamily" Value="{DynamicResource MonoFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
        <Setter Property="Padding" Value="{StaticResource ThicknessS}" />
    </Style>

    <Style Selector="ListBox.logViewer > ListBoxItem">
        <Setter Property="Padding" Value="4,2" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="ListBoxItem.log-debug">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
    </Style>

    <Style Selector="ListBoxItem.log-info">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
    </Style>

    <Style Selector="ListBoxItem.log-warning">
        <Setter Property="Foreground" Value="{DynamicResource AppAccentColor3Brush}" />
    </Style>

    <Style Selector="ListBoxItem.log-error">
        <Setter Property="Foreground" Value="{DynamicResource AppErrorBrush}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    </Style>

    <Style Selector="TextBlock.log-timestamp">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
    </Style>

    <Style Selector="TextBlock.log-level">
        <Setter Property="Margin" Value="{StaticResource ThicknessHorizontalS}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    </Style>

    <Style Selector="TextBlock.log-level.level-debug">
        <Setter Property="Foreground" Value="Gray" />
    </Style>

    <Style Selector="TextBlock.log-level.level-info">
        <Setter Property="Foreground" Value="DodgerBlue" />
    </Style>

    <Style Selector="TextBlock.log-level.level-warning">
        <Setter Property="Foreground" Value="Orange" />
    </Style>

    <Style Selector="TextBlock.log-level.level-error">
        <Setter Property="Foreground" Value="Red" />
    </Style>

    <!-- Type Badge -->
    <Style Selector="Border.typeBadge">
        <Setter Property="Background" Value="{DynamicResource AccentColor}" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusS}" />
        <Setter Property="Padding" Value="6,3" />
        <Setter Property="MinWidth" Value="45" />
    </Style>

    <Style Selector="Border.typeBadge TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource AccentColorForegroundBrush}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    </Style>

    <!-- Action Button (with margin) -->
    <Style Selector="Button.action-button">
        <Setter Property="Margin" Value="{StaticResource ThicknessRightS}" />
        <Setter Property="Height" Value="{StaticResource ButtonHeightL}" />
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="Padding" Value="{StaticResource ThicknessHorizontalM}" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusS}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <!-- Primary Action Button -->
    <Style Selector="Button.action-button.primary">
        <Setter Property="Background" Value="{DynamicResource SystemAccentColor1Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundAltHighBrush}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    </Style>

    <Style Selector="Button.action-button.primary:pointerover">
        <Setter Property="Background" Value="{DynamicResource SystemAccentColor2Brush}" />
    </Style>

    <!-- Readonly Value -->
    <Style Selector="TextBlock.readonly-value">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}" />
        <Setter Property="FontFamily" Value="{DynamicResource MonoFontFamily}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Form Field StackPanel -->
    <Style Selector="StackPanel.form-field">
        <Setter Property="Spacing" Value="4" />
    </Style>

    <!-- Error Border -->
    <Style Selector="Border.error-border">
        <Setter Property="Background" Value="{DynamicResource SystemControlErrorToastForegroundBrush}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <!-- =============================================
         INPUT CONTROL ALIGNMENT
         ============================================= -->

    <!-- Ensure all input controls are vertically centered -->
    <Style Selector="TextBox">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style Selector="ComboBox">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style Selector="NumericUpDown">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- =============================================
         SETTINGS-SPECIFIC STYLES
         ============================================= -->

    <!-- Settings dropdown (custom override) -->
    <Style Selector="ComboBox.settings-dropdown">
        <Setter Property="MinWidth" Value="240" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <!-- Settings checkbox (custom override) -->
    <Style Selector="CheckBox.settings-checkbox">
        <Setter Property="Margin" Value="{StaticResource ThicknessTopS}" />
    </Style>

    <Style Selector="CheckBox.settings-checkbox > ContentPresenter">
        <Setter Property="Margin" Value="{StaticResource ThicknessLeftS}" />
    </Style>

</Styles>
